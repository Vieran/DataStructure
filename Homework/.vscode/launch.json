    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb)Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\AllOfProgram\\Auxiliary\\MinGW-w64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "make"//这个重要，task中的make？
        }
    ]
}


//${fileDirname}   当前打开的文件绝对路径，不包括文件名
//${fileExtname} 当前打开的文件的后缀名
//${fileBasenameNoExtension}	当前文件的文件名(包括绝对路径、文件名)
//${relativeFile}	当前文件的相对路径（从当前文件夹到当前文件）
//${file}	当前正在编辑的文件的完整文件名（包括绝对路径、文件名、后缀名）
//${workspaceRootFolderName}   当前打开的文件夹的名字